@using eTickets.Models;
@model Actor

@{
    ViewData["Title"] = "Delete of a Actor";
}

<div class="row text">
    <div class="col-md-8  offset-2">
        <h4 style="text-align:center;color:red">Delete Confirmation for @Model.FullName</h4>
        <div class="row ">
            <div class="col-md-8  offset-2">

                <div class="form-group text-center">
                    <img src="@Model.ProfilePictureURL" id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width:150px" />
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="ProfilePictureURL"></label>
                    <input class="form-control" asp-for="ProfilePictureURL" readonly="readonly" />

                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="FullName"></label>
                    <input class="form-control" asp-for="FullName" readonly="readonly" />

                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Bio"></label>
                    <input class="form-control" asp-for="Bio" readonly="readonly" />

                </div>
                <div class="form-group">
                    <form asp-action="Delete" >
                        <input  type="hidden" asp-for="Id"/> 
                        <input  type="submit" value="Confirm Delete" class="btn btn-danger float-end "/>
                    </form>
                    @* <input type="submit" value="Delete" class="btn btn-outline-success float-end"/>*@ 
                    <a class="btn btn-outline-info" asp-action="Index">Back to Actors List</a>
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts
    {

    <script>
        $(document).ready(function)()
        {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(ProfilePictureURL).val();
        }
    </script>
    <script>

        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>





}