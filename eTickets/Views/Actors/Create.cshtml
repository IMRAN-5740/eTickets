@model Actor
@{
    ViewData["Title"] = "Create a New Actor";
}

<div class="row text">
    <div class="col-md-8  offset-2">
        <p>
            <h4>Add a new Actor</h4>
        </p>
    </div>
    <div class="row ">
        <div class="col-md-8  offset-2">
            <form asp-action="Create" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </form>
            <div class="form-group text-center">
                <img id="ProfilePicturePreview" />
            </div>
            
            <div class="form-group">
                <label class="control-label" asp-for="ProfilePictureURL"></label>
                <input  class="form-control" asp-for="ProfilePictureURL"/>
                <span asp-validation-for="ProfilePictureURL" class="text-danger"> </span>
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="FullName"></label>
                <input class="form-control" asp-for="FullName" />
                <span asp-validation-for="FullName" class="text-danger"> </span>
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Bio"></label>
                <input class="form-control" asp-for="Bio" />
                <span asp-validation-for="Bio" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success float-end"/>
                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script>

        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src=$(this).val();
        })
    </script>

}